@model Univer.Models.Special

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить данный объект?</h3>
<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Предмет
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Группы
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (Group g in Model.Groups)
                {
                    <li>
                        <a asp-controller="Groups" asp-action="Details" asp-route-id="@g.Id">@g.Title</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
