@model Univer.Models.Instructor

@{
    ViewData["Title"] = "Информация о преподавателе";
}

<h1>Информация о преподавателе</h1>

<div>
    <h4>Преподаватель</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Фото
        </dt>
        <dd class = "col-sm-10">
             <img class="image_student" src="@Model.Photo" />
        </dd>
        <dt class="col-sm-2">
            Группа
        </dt>
        <dd class="col-sm-10">
            @if (Model.Group is not null)
            {
                <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Group.Id">@Model.Group.Title</a>
            }
        </dd>
        <dt class="col-sm-2">
            Курсы
        </dt>
        <dd class="col-sm-10">
            <dl>
                @foreach (Course c in Model.Courses)
                {
                    <dd>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@c.Id">@c.Title</a>
                    </dd>
                }
            </dl>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
